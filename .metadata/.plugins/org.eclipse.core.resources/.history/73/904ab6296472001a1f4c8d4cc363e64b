
public class SecondPattern {

	public static void main(String[] args) {
		int numberofrows = 5;
		for (int i = 1; i < numberofrows; i++) {
			for (int j = 1; j < i + 1; j++) {
				System.out.print("*");
			}
			System.out.println();
		}

		for (int i = numberofrows; i > 0; i--) {
			for (int j = i; j > 0; j--) {
				System.out.print("*");
			}
			System.out.println();
		}

	}

}
